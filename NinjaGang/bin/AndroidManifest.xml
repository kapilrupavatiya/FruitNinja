<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ninjagang"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.example.ninjagang.GamePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.ninjagang.MenuPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.thread.menupage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
          <activity
            android:name="com.example.ninjagang.level1"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.thread.startgamelevel1" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
 
 
    </application>
 
</manifest>
